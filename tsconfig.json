{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"],
      "@test-utils/*": ["./src/test-utils/*"],
      "@controllers/*": ["./src/app/controllers/*"]
    },
    "typeRoots": ["./@types", "./node_modules/@types"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules", "jest.config.ts", "jest.setup.ts"]
}
